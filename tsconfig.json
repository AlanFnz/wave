{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react",
        "lib": ["dom", "es2018"],
        "declaration": true,
        "declarationDir": "lib/types/",
        "rootDir": "src/",
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/docs"]
}
